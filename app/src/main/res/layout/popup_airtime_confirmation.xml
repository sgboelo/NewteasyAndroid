<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

        <com.SmartTech.teasyNew.view.CustomTextView
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Youâ€™re Buying Airtime for"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000"/>

        <View
            android:id="@+id/confirm_logo_glo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/logo_glo"
            android:visibility="gone"/>
        <View
            android:id="@+id/confirm_logo_mtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/logo_mtn"
            android:visibility="gone"/>
        <View
            android:id="@+id/confirm_logo_airtel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/logo_airtel"
            android:visibility="gone"/>
        <View
            android:id="@+id/confirm_logo_etisalat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/logo_etisalat"/>

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.SmartTech.teasyNew.view.CustomTextView
                android:tag="phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2340000000000"
                android:layout_alignParentLeft="true"
                android:textSize="18sp"
                app:textFont="RobotoMedium"/>

            <com.SmartTech.teasyNew.view.CustomTextView
                android:tag="amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NGN 2345"
                android:layout_alignParentRight="true"
                android:textColor="#6cac06"
                android:textSize="18sp"
                app:textFont="RobotoMedium"/>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <Button
        android:onClick="confirmPurchaseClicked"
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy Airtime"
        android:textColor="#ff4d02"
        android:background="#ffffff" />
</LinearLayout>