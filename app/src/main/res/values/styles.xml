<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="customEditTextStyle">@style/CustomEditText</item>

    </style>


        <style name="AppTheme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorAccent</item>
            <item name="colorPrimaryDark">@color/colorAccent</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Activity" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@style/DownUpActivity</item>
    </style>
    <style name="Activity2" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/DownUpActivity</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btn_login_number">
        <item name="android:typeface">serif</item>
        <item name="android:background">@drawable/btn_login_number_bg</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="DownUpActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left</item>
        <item name="android:activityOpenExitAnimation">@anim/alpha</item>
    </style>

    <style name="drawer_menu_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">11dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/drawer_menu_item_bg</item>
    </style>
    <style name="drawer_menu_item_icon">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="drawer_menu_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#19486a</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:clickable">false</item>
        <item name="textFont">MyriadProRegular</item>
    </style>

    <style name="reg_label">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#000000</item>
        <item name="textFont">RobotoRegular</item>
    </style>

    <style name="reg_edittext">
        <item name="android:paddingLeft">60dp</item>
    </style>

    <style name="reg_spinner">
        <item name="textFont">RobotoRegular</item>
    </style>

    <style name="RadioGenderMale" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/gender_male_radio</item>
    </style>

    <style name="RadioGenderFemale" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/gender_female_radio</item>
    </style>

    <style name="dashboard_button">
        <item name="android:layout_height">102dp</item>
        <item name="android:layout_width">94dp</item>
        <item name="android:layout_marginBottom">@dimen/dashboard_button_marginBottom</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dashboard_button_icon">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="dashboard_button_label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#6f8193</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="textFont">MyriadProRegular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bottom_menu_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="bottom_menu_item_label">
        <item name="android:tag">bottom_menu_item_label</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="textFont">OpenSansLight</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color_bottom_menu_item_inactive</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="bottom_menu_item_icon">
        <item name="android:tag">bottom_menu_item_icon</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">#02355a</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <style name="airtime_menu_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="airtime_menu_item_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="airtime_menu_item_icon">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
    </style>

    <style name="airtime_menu_item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#e4e4e4</item>
    </style>

    <style name="airtime_network_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="hospital_dropdown_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="textFont">RalewaySemiBold</item>
        <item name="android:textColor">#141414</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="hospital_dropdown_item_selected">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="textFont">RalewaySemiBold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">#ff4e02</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="textFont">OpenSansBold</item>
    </style>

    <style name="bank_card_form_number_input_fields">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:background">#f1f1f1</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:inputType">number</item>
    </style>
</resources>
